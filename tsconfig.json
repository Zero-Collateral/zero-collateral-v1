{
  "compilerOptions": {
    "sourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "ES6",
    "allowJs": false,
    "strict": true,
    "noEmit": true
  },
  "files": ["hardhat.config.ts"],
  "include": [
    "./config",
    "./deploy",
    "./scripts",
    "./tasks",
    "./test",
    "./types",
    "./utils"
  ],
  "exclude": [
    "./artifacts",
    "./build",
    "./cache",
    "./contracts",
    "./coverage",
    "./docs"
  ]
}
