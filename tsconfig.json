{
  "compilerOptions": {
    "sourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "ESNext",
    "allowJs": true,
    "strict": true
  },
  "files": ["hardhat.config.ts"],
  "include": [
    "./test",
    "./types",
    "./deploy",
    "./config",
    "./test-utils",
    "./utils",
    "./tasks"
  ],
  "exclude": [
    "./contracts",
    "./build",
    "./artifacts",
    "./docs",
    "./cache",
    "./coverage"
  ]
}
